
{# Settings page template for widget configuration #}
<div class="mensagens-futuras-settings">
  <div class="page-header">
    <h1 class="page-title">{{ i18n.widget.name }} - Configura√ß√µes</h1>
    <p class="page-description">
      Configure o comportamento do widget de mensagens futuras.
    </p>
  </div>

  <div class="settings-form">
    <form id="widget-settings-form">
      <div class="form-section">
        <h3>Configura√ß√µes Gerais</h3>
        
        <div class="form-field">
          <label for="polling_interval">{{ i18n.settings.polling_interval }}</label>
          <select id="polling_interval" name="polling_interval">
            <option value="1">{{ i18n.settings.polling_1_min }}</option>
            <option value="5">{{ i18n.settings.polling_5_min }}</option>
            <option value="10" selected>{{ i18n.settings.polling_10_min }}</option>
            <option value="30">{{ i18n.settings.polling_30_min }}</option>
          </select>
        </div>

        <div class="form-field">
          <label for="timezone">{{ i18n.settings.timezone }}</label>
          <select id="timezone" name="timezone">
            <option value="America/Sao_Paulo" selected>{{ i18n.settings.timezone_sao_paulo }}</option>
            <option value="America/New_York">{{ i18n.settings.timezone_new_york }}</option>
            <option value="Europe/Madrid">{{ i18n.settings.timezone_madrid }}</option>
            <option value="UTC">{{ i18n.settings.timezone_utc }}</option>
          </select>
        </div>

        <div class="form-field checkbox-field">
          <label>
            <input type="checkbox" id="notifications" name="notifications" checked>
            {{ i18n.settings.notifications }}
          </label>
        </div>

        <div class="form-field checkbox-field">
          <label>
            <input type="checkbox" id="debug_mode" name="debug_mode">
            {{ i18n.settings.debug_mode }}
          </label>
        </div>
      </div>

      <div class="form-actions">
        <button type="submit" class="btn btn-primary">Salvar Configura√ß√µes</button>
        <button type="button" class="btn btn-secondary" id="reset-settings">Restaurar Padr√µes</button>
      </div>
    </form>
  </div>

  {% if messages|length > 0 %}
    <div class="messages-overview">
      <h3>{{ i18n.scheduled_messages }}</h3>
      <div class="messages-table">
        <table class="table">
          <thead>
            <tr>
              <th>Data/Hora do Envio</th>
              <th>Lead/Contato</th>
              <th>Mensagem</th>
              <th>{{ i18n.status }}</th>
              <th>{{ i18n.scheduled_by }}</th>
              <th>A√ß√µes</th>
            </tr>
          </thead>
          <tbody>
            {% for message in messages %}
              <tr>
                <td>
                  <strong>{{ message.scheduledDateTime|date('d/m/Y H:i') }}</strong>
                </td>
                <td>
                  <a href="/{{ message.entityType }}/detail/{{ message.entityId }}" 
                     class="entity-link" 
                     target="_blank">
                    {{ message.entityType == 'leads' ? 'Lead' : 'Contato' }} #{{ message.entityId }}
                  </a>
                </td>
                <td>
                  <div class="message-preview">
                    {{ message.messageText|length > 50 ? message.messageText|slice(0, 50) ~ '...' : message.messageText }}
                  </div>
                </td>
                <td>
                  <span class="message-status status-{{ message.currentStatus|lower|replace({' ': '-'}) }}">
                    {{ message.currentStatus }}
                  </span>
                </td>
                <td>{{ message.auditLog[0].userName }}</td>
                <td>
                  <div class="message-actions">
                    {% if message.currentStatus != 'Cancelada' and message.currentStatus != 'Enviada' %}
                      <button class="btn-action btn-edit js-edit-message" 
                              data-message-id="{{ message.id }}" 
                              type="button">
                        {{ i18n.edit }}
                      </button>
                    {% endif %}
                    <button class="btn-action btn-delete js-delete-message" 
                            data-message-id="{{ message.id }}" 
                            type="button">
                      {{ i18n.delete }}
                    </button>
                  </div>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  {% else %}
    <div class="empty-state">
      <div class="empty-state-icon">üì≠</div>
      <h3>Nenhuma mensagem agendada</h3>
      <p>As mensagens agendadas aparecer√£o aqui quando forem criadas nos leads e contatos.</p>
    </div>
  {% endif %}
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Load saved settings
  loadSettings();
  
  // Handle form submission
  document.getElementById('widget-settings-form').addEventListener('submit', function(e) {
    e.preventDefault();
    saveSettings();
  });
  
  // Handle reset button
  document.getElementById('reset-settings').addEventListener('click', function() {
    resetToDefaults();
  });
});

function loadSettings() {
  // Load settings from widget storage
  const settings = AMOCRM.widgets.system.getSettings();
  if (settings) {
    if (settings.polling_interval) {
      document.getElementById('polling_interval').value = settings.polling_interval;
    }
    if (settings.timezone) {
      document.getElementById('timezone').value = settings.timezone;
    }
    if (settings.notifications !== undefined) {
      document.getElementById('notifications').checked = settings.notifications;
    }
    if (settings.debug_mode !== undefined) {
      document.getElementById('debug_mode').checked = settings.debug_mode;
    }
  }
}

function saveSettings() {
  const settings = {
    polling_interval: document.getElementById('polling_interval').value,
    timezone: document.getElementById('timezone').value,
    notifications: document.getElementById('notifications').checked,
    debug_mode: document.getElementById('debug_mode').checked
  };
  
  AMOCRM.widgets.system.setSettings(settings);
  
  // Show success message
  alert('Configura√ß√µes salvas com sucesso!');
}

function resetToDefaults() {
  document.getElementById('polling_interval').value = '10';
  document.getElementById('timezone').value = 'America/Sao_Paulo';
  document.getElementById('notifications').checked = true;
  document.getElementById('debug_mode').checked = false;
}
</script>

