
{
  "widget": {
    "name": "widget.name",
    "description": "widget.description",
    "short_description": "widget.short_description",
    "version": "1.0.0",
    "interface_version": 2,
    "init_once": false,
    "locale": ["pt", "es", "en"],
    "installation": true,
    "support": {
      "link": "https://support.example.com",
      "email": "support@example.com"
    }
  },
  "locations": ["lcard-1", "ccard-0", "settings"],
  "tour": {
    "is_tour": true,
    "tour_images": {
      "en": ["/images/slideshow_1_en.jpg", "/images/slideshow_2_en.jpg", "/images/slideshow_3_en.jpg"],
      "es": ["/images/slideshow_1_es.jpg", "/images/slideshow_2_es.jpg", "/images/slideshow_3_es.jpg"],
      "pt": ["/images/slideshow_1_pt.jpg", "/images/slideshow_2_pt.jpg", "/images/slideshow_3_pt.jpg"]
    },
    "tour_description": "widget.tour_description"
  },
  "settings": {
    "polling_interval": {
      "name": "settings.polling_interval",
      "type": "select",
      "required": true,
      "values": [
        {"value": "1", "name": "settings.polling_1_min"},
        {"value": "5", "name": "settings.polling_5_min"},
        {"value": "10", "name": "settings.polling_10_min"},
        {"value": "30", "name": "settings.polling_30_min"}
      ]
    },
    "timezone": {
      "name": "settings.timezone",
      "type": "select",
      "required": true,
      "values": [
        {"value": "America/Sao_Paulo", "name": "settings.timezone_sao_paulo"},
        {"value": "America/New_York", "name": "settings.timezone_new_york"},
        {"value": "Europe/Madrid", "name": "settings.timezone_madrid"},
        {"value": "UTC", "name": "settings.timezone_utc"}
      ]
    },
    "notifications": {
      "name": "settings.notifications",
      "type": "checkbox",
      "required": false
    },
    "debug_mode": {
      "name": "settings.debug_mode",
      "type": "checkbox",
      "required": false
    }
  }
}
